/**
 * Implements hook_theme_suggestions_HOOK().
 */
function facets_source_summary_theme_suggestions_facets_source_summary_facet(array $variables) {
  // Add suggestions as: facets-source-summary-facet--{facet_id}.
  return ['facets_source_summary_facet__' . $variables['facet_id']];
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function facets_source_summary_theme_suggestions_facets_source_summary_facet_result(array $variables) {
  // Add suggestions as: facets-source-summary-facet-result--{facet_id}.
  return [$variables['theme_hook_original'] . '__' . $variables['facet_id']];
}
